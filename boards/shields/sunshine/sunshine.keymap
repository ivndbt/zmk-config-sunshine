#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Default Layer";
// -----------------------------------------------------------------------------------------------------------------
// |  ESC  |  1  ||  2  |  3  |  4  |  5  |  6  ||  7  |  8  |  9   |  0  ||   -   |   =   | BCKSPC |
// |  TAB  |  Q  ||  W  |  E  |  R  |  T  |------|  Y  |  U  |  I   |  O  ||   P   |   [   |   ]    |  #   |
// |  CAPS |  A  ||  S  |  D  |  F  |  G  |------|  H  |  J  |  K   |  L  ||   ;   |   '   | ENTER  |
// | LSHFT |  Z  ||  X  |  C  |  V  |  B  |------|  B  |  N  |  M   |  ,  ||   .   |   /   | RSHFT  |  UP  |
// | LCTRL | LGUI|| LALT|    SPC    |------------|    SPC    | RALT |------| MO(1) | MO(2) | LEFT   | DOWN | RIGHT |
            bindings = <
&kp ESC    &kp N1    &kp N2    &kp N3  &kp N4     &kp N5  &kp N6     &kp N7    &kp N8  &kp N9  &kp N0     &kp MINUS  &kp EQUAL  &kp BSPC
&kp TAB    &kp Q     &kp W     &kp E   &kp R      &kp T   &kp Y      &kp U     &kp I   &kp O   &kp P      &kp LBKT   &kp RBKT   &kp ENTER
&kp CAPS   &kp A     &kp S     &kp D   &kp F      &kp G   &kp H      &kp J     &kp K   &kp L   &kp SEMI   &kp SQT    &kp HASH
&kp LSHFT            &kp Z     &kp X   &kp C      &kp V   &kp B      &kp B     &kp N   &kp M   &kp COMMA  &kp DOT    &kp FSLH   &kp RSHFT
&kp LCTRL  &kp LGUI  &kp LALT          &kp SPACE          &kp SPACE  &kp RALT  &mo 1   &mo 2   &kp LEFT   &kp UP     &kp DOWN   &kp RIGHT
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
            display-name = "Lower Layer";
// -----------------------------------------------------------------------------------------------------------------
// | ` | F1 || F2 | F3  | F4  | F5 | F6 || F7 | F8 | F9 | F10 || F11 |  F12  |    |
// |   |    ||    |     |     |    |-----|    |    |    |     ||     |       |    |    |
// |   |    ||    |     |     |    |-----|    |    |    |     ||     |       |    |
// |   |    ||    |     |     |    |-----|    |    |    |     ||     |       |    |    |
// |   |    ||    | ZMKSTUDIO |----------|         |    |------|     | MO(3) |    |    |    |
            bindings = <
&kp GRAVE  &kp F1  &kp F2  &kp F3   &kp F4          &kp F5  &kp F6  &kp F7  &kp F8  &kp F9  &kp F10  &kp F11  &kp F12  &trans
&trans     &trans  &trans  &trans   &trans          &trans  &trans  &trans  &trans  &trans  &trans   &trans   &trans   &trans
&trans     &trans  &trans  &trans   &trans          &trans  &trans  &trans  &trans  &trans  &trans   &trans   &trans            
&trans             &trans  &trans   &trans          &trans  &trans  &trans  &trans  &trans  &trans   &trans   &trans   &trans
&trans     &trans  &trans           &studio_unlock          &trans  &trans  &trans  &mo 3   &trans   &trans   &trans   &trans
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        raise_layer {
            display-name = "Raise Layer";
// -----------------------------------------------------------------------------------------------------------------
// |      |    ||    |     |     |    |    ||        |        |        |    ||       |    |    |
// |      |    ||    |     |     |    |-----| BT_CLR | BTPREV | BTNEXT |    ||       |    |    |    |
// | BOOT |    ||    |     |     |    |-----| BTSEL0 | BTSEL1 | BTSEL2 |    ||       |    |    |
// |      |    ||    |     |     |    |-----| BTSEL3 | BTSEL4 |        |    ||       |    |    |    |
// | RST  |    ||    | ZMKSTUDIO |----------|                 |        |-----| MO(3) |    |    |    |    |
            bindings = <
&trans       &trans  &trans  &trans   &trans          &trans  &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans
&trans       &trans  &trans  &trans   &trans          &trans  &bt BT_CLR    &bt BT_PRV    &bt BT_NXT    &trans  &trans  &trans  &trans  &trans
&bootloader  &trans  &trans  &trans   &trans          &trans  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &trans  &trans  &trans  &trans           
&trans               &trans  &trans   &trans          &trans  &bt BT_SEL 3  &bt BT_SEL 4  &trans        &trans  &trans  &trans  &trans  &trans
&sys_reset   &trans  &trans           &studio_unlock          &trans        &trans        &mo 3         &trans  &trans  &trans  &trans  &trans
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        control_layer {
            display-name = "Control Layer";
// -----------------------------------------------------------------------------------------------------------------
// |   |    ||    |     |     |    |    ||    |    |    |    ||    |    |    |
// |   |    ||    |     |     |    |-----|    |    |    |    ||    |    |    |    |
// |   |    ||    |     |     |    |-----|    |    |    |    ||    |    |    |
// |   |    ||    |     |     |    |-----|    |    |    |    ||    |    |    |    |
// |   |    ||    |           |----------|         |    |-----|    |    |    |    |    |
            bindings = <
&trans  &trans  &trans  &trans   &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans   &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans   &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans           
&trans          &trans  &trans   &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans           &trans          &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };
    };
};